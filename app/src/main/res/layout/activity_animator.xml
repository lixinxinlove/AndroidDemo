<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lee.androiddemo.activity.AnimatorActivity">

        <Button
            android:id="@+id/btn_anim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick1"
            android:text="动画1" />

        <Button
            android:id="@+id/btn_anim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick2"
            android:text="动画2"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintLeft_toRightOf="@+id/btn_anim1"
            android:layout_marginLeft="39dp" />

        <Button
            android:id="@+id/btn_anim3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick3"
            android:text="动画3"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintLeft_toRightOf="@+id/btn_anim2"
            android:layout_marginLeft="31dp" />



        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv"
            android:layout_width="384dp"
            android:layout_height="394dp"
            android:src="@mipmap/bg_welcome"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_anim2" />


</android.support.constraint.ConstraintLayout>
