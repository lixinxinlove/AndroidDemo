<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="Anim_fade" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/menu_fadein</item>
        <item name="android:activityOpenExitAnimation">@anim/menu_fadein</item>
        <item name="android:activityCloseEnterAnimation">@anim/menu_fadein</item>
        <item name="android:activityCloseExitAnimation">@anim/menu_fadein</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 编辑器图片加载菜单 -->
    <style name="LeeMenuAnimationFade">
        <item name="android:windowEnterAnimation">@anim/menu_fadein</item>
        <item name="android:windowExitAnimation">@anim/menu_fadeout</item>
    </style>


</resources>
